<resources>

    <!-- Base application theme
    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <!-- partitioning screen
    -->
    <style name="Vertical_80Purcent">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.80</item>
    </style>

    <style name="Vertical_20Purcent">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.20</item>
    </style>

    <!-- Tables
    -->

    <!-- high level table layout -->
    <style name="CommonTableLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- table row (table rows total height matches parent height) -->
    <style name="CommonTableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- text (titles, left side of TableRows) -->
    <style name="TextViewForTableRow" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.40</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- text (titles, left side of TableRows) -->
    <style name="TextViewMultilinesForTableRow" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">top</item>
        <item name="android:lines">30</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">200</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="TextViewForTableRowSmall" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- edit (entry zones, right side of TableRows) -->
    <style name="EditTextForTableRow" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_weight">0.60</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">right</item>
    </style>

    <!-- time button -->
    <style name="TimeButtonForTableRow" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.60</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:hint">@string/hint_date</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Switch (entry zones, right side of TableRows) -->
    <style name="SwitchForTableRow" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_height">48sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleX">1.2</item>
        <item name="android:scaleY">1.2</item>
        <item name="android:textOn">@string/conf_flash_oui</item>
        <item name="android:textOff">@string/conf_flash_non</item>
        <item name="android:showText">true</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">28dp</item>
    </style>

    <!-- spacing -->
    <style name="BigVerticalSpace">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="ShortVerticalSpace">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <!-- large validation button -->
    <style name="ValidationButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <!-- scanning button -->
    <style name="ScanningButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- other buttons on main activity -->
    <style name="MainButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
