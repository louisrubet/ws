<resources>

    <!-- Base application theme
    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <!-- Layouts
    -->
    <style name="Vertical_80Purcent">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.80</item>
    </style>

    <style name="Vertical_20Purcent">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.20</item>
    </style>

    <style name="Vertical_ListView_Item">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Tables
    -->

    <!-- TableLayout: high level table layout -->
    <style name="CommonTableLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- TableRow: table rows total height matches parent height -->
    <style name="CommonTableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- TextView: left side of TableRows (40% weight) -->
    <style name="TextViewForTableRow" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.40</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- TextView: histo, left side of TableRows (short) -->
    <style name="TextViewForTableRowHistoLeft" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.30</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- TextView: histo, left side of TableRows (large) -->
    <style name="TextViewForTableRowHistoLeft60p" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.70</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- TextView: histo, right side of TableRows (large) -->
    <style name="TextViewForTableRowHistoRight" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.70</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- TextView: histo, right side of TableRows (short) -->
    <style name="TextViewForTableRowHistoRight40p" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.30</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- TextView: left side of TableRows (30% weight) -->
    <style name="TextViewForListHeaderLeft" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.30</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorToolbarItem</item>
    </style>

    <!-- TextView: left side of TableRows (70% weight) -->
    <style name="TextViewForListHeaderRight" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.70</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorToolbarItem</item>
    </style>

    <!-- TextView: for note -->
    <style name="TextViewMultilinesForTableRow" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">top</item>
        <item name="android:lines">30</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">200</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- TextView: empty lists management -->
    <style name="TextViewForEmptyList" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">normal|italic</item>
    </style>

    <!-- TextView: histo date -->
    <style name="TextViewForHistoDate" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- EditText: entry zones, right side of TableRows (60% weight) -->
    <style name="EditTextForTableRow" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_weight">0.60</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">right</item>
    </style>

    <!-- Button: time button, right side of TableRows (60% weight) -->
    <style name="TimeButtonForTableRow" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.60</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:hint">@string/hint_date</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Switch: entry zones, right side of TableRows -->
    <style name="SwitchForTableRow" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_height">48sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleX">1.2</item>
        <item name="android:scaleY">1.2</item>
        <item name="android:textOn">@string/conf_flash_oui</item>
        <item name="android:textOff">@string/conf_flash_non</item>
        <item name="android:showText">true</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">28dp</item>
    </style>

    <!-- Space -->
    <style name="BigVerticalSpace">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="ShortVerticalSpace">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <!-- Button: large validation button -->
    <style name="ValidationButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <!-- Button: scanning button -->
    <style name="ScanningButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Button: other buttons on main activity -->
    <style name="MainButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Floating action button
    -->
    <style name="FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

</resources>
