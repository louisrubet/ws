<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lrubstudio.workshape.ConfigurationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarColoredBackArrow"
        app:titleTextColor="@color/colorToolbarItem"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:useDefaultMargins="false"
        android:layout_below="@id/my_toolbar"
        android:layout_marginTop="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/server_hostname"
            android:id="@+id/textView13"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="right"
            />

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/editServerHostname"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/server_port"
            android:id="@+id/textView14"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="right"/>

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editServerPort"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/database_name"
            android:id="@+id/textView15"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="right"/>

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/editDatabaseName"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/database_user"
            android:id="@+id/textView16"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="right"/>

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/editDatabaseUser"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/database_password"
            android:id="@+id/textView17"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editDatabasePassword"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/database_timeout"
            android:id="@+id/textView18"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="right"/>

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editDatabaseTimeout"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/conf_password"
            android:id="@+id/textView19"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="right"/>

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editConfigurationPassword"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            android:id="@+id/buttonApply"
            android:layout_row="7"
            android:layout_column="2"
            android:onClick="onClickApply"
            android:layout_gravity="center_horizontal"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="8"
            android:layout_column="1"/>

    </GridLayout>
</RelativeLayout>
