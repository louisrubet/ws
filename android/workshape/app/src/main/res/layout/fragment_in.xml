<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              tools:context="com.lrubstudio.workshape.InFragment"
              android:orientation="vertical"
              android:gravity="center_horizontal">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 style="@style/CommonTableLayout">

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_gravity="center_vertical|right">

            <TextView
                android:text="@string/qr_code"
                android:id="@+id/textView20"
                style="@style/TextViewForTableRow" />

            <EditText
                android:id="@+id/editInQRCode"
                android:inputType="text"
                style="@style/EditTextForTableRow" />

        </TableRow>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

            <TextView
                android:text="@string/reference"
                android:id="@+id/textView21"
                style="@style/TextViewForTableRow" />

            <EditText
                android:id="@+id/editInReference"
                android:inputType="text"
                style="@style/EditTextForTableRow" />

        </TableRow>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">
            <Space
                android:layout_width="20px"
                android:layout_height="40px" />
        </TableRow>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

            <TextView
                android:text="@string/lieu_depuis"
                android:id="@+id/textView2123"
                style="@style/TextViewForTableRow" />

            <EditText
                android:id="@+id/editInLieuDepuis"
                style="@style/EditTextForTableRow"
                android:inputType="datetime"/>

        </TableRow>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

            <TextView
                android:text="@string/longueur_initiale"
                android:id="@+id/textView22"
                style="@style/TextViewForTableRow"
                android:textIsSelectable="true" />

            <EditText
                android:id="@+id/editInLongueurInitiale"
                android:inputType="none|numberDecimal"
                style="@style/EditTextForTableRow" />
        </TableRow>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

            <TextView
                android:text="@string/longueur_actuelle"
                android:id="@+id/textView23"
                style="@style/TextViewForTableRow" />

            <EditText
                android:id="@+id/editInLongueurActuelle"
                android:inputType="none|numberDecimal"
                style="@style/EditTextForTableRow" />
        </TableRow>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

            <TextView
                android:text="@string/temps_hors_gel_total"
                android:id="@+id/textView24"
                style="@style/TextViewForTableRow" />

            <EditText
                android:id="@+id/editInHorsGelTotal"
                android:inputType="time"
                style="@style/EditTextForTableRow" />
        </TableRow>

        <Space style="@style/BigVerticalSpace"/>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

            <TextView
                android:text="@string/longueur_consommee"
                android:id="@+id/textView2121"
                style="@style/TextViewForTableRow" />

            <EditText
                android:id="@+id/editInLongueurConsommee"
                android:inputType="numberDecimal"
                style="@style/EditTextForTableRow" />

        </TableRow>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

            <TextView
                android:text="@string/hors_gel"
                android:id="@+id/textView21211"
                style="@style/TextViewForTableRow" />

            <EditText
                android:id="@+id/editInTempsHorsGel"
                android:inputType="time"
                style="@style/EditTextForTableRow" />

        </TableRow>

        <Space style="@style/BigVerticalSpace"/>

    </TableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">

        <Button
            android:text="@string/entrer_la_piece"
            android:id="@+id/buttonActionIn"
            style="@style/ValidationButton"/>
    </LinearLayout>

</LinearLayout>
