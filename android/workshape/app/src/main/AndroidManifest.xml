<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lrubstudio.workshape"
          xmlns:android="http://schemas.android.com/apk/res/android">
    # for MySQL JDBC connections
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_action_barcode_2"
        android:label="@string/activity_main_title"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <!-- The main activity -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- scanner activity -->
        <activity
            android:name=".ScannerActivity"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:parentActivityName="com.lrubstudio.workshape.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lrubstudio.workshape.MainActivity" />
        </activity>

        <!-- edit / add piece activity -->
        <activity
            android:name=".EditAddActivity"
            android:label="@string/activity_edit_title"
            android:parentActivityName="com.lrubstudio.workshape.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lrubstudio.workshape.MainActivity" />
        </activity>

        <!-- configuration activity -->
        <activity
            android:name=".ConfigurationActivity"
            android:label="@string/activity_configuration_title"
            android:parentActivityName="com.lrubstudio.workshape.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lrubstudio.workshape.MainActivity" />
        </activity>
    </application>

</manifest>
